<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop = "20dp">
    <ImageView
        android:id="@+id/petSizeIv"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        tools:src="@drawable/ic_5_10kg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/petSizeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "1-5кг"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/avenir_ltstd_roman"
        app:layout_constraintStart_toStartOf="@id/petSizeIv"
        app:layout_constraintEnd_toEndOf="@id/petSizeIv"
        app:layout_constraintTop_toBottomOf="@id/petSizeIv"/>
</androidx.constraintlayout.widget.ConstraintLayout>